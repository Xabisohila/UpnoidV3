@model UpnoidV3.ViewModels.RentalViewModel
@{
    ViewBag.Title = "New Rental Form";
}
<div class="panel panel-success">
    <div class="jumbotron panel-heading text-center">Rental Form</div>
        <br />
        <div class="col-md-offset-3">
            <form>
                <div class="form-group">
                    <label asp-for="customers" class="col-md-2 control-label">
                       Customer Name
                    </label>
                    <div class="col-md-10">
                        <input asp-for="customers" class="form-control" placeholder="Customer name" />
                        <span asp-validation-for="customers" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="xabiso">
                        <label asp-for="movies" class="col-md-2 control-label">
                            Movie Name
                        </label>
                    </div>  
                    <div class="col-md-10">
                        <input asp-for="movies" class="form-control" placeholder="Movie name"/>
                        <span asp-validation-for="movies" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-md-offset-4">
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                </div>  
                <br /> 
                    <p>
                        Upnoid™
                    </p>
               
                <div id="myAlert" class="alert alert-danger collapse">
                    <a id="linkClose" href="#" class="close">&times;</a>
                    <strong>There was a problem submitting your form</strong>
                </div>  
            </form>
        </div>
    </div>

<script src="https://ajax.googleapi.com/ajax/libs/jquery/1.11.3/jquery.min.js">
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSubmit').click(function () {
            $('#myAlert').show('fade');
        });
        $('#linkClose').click(function () {
            $('#myAlert').hide('fade');
        });
    });
    
</script>


