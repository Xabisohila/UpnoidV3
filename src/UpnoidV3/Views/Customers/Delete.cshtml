@model UpnoidV3.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="form-group">
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "First Name", new { @class = "right-align flow-text" }):
        <span class="left-align flow-text">@Html.DisplayFor(model => model.FirstName)</span>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Last Name", new { @class = "right-align flow-text" }):
        <span class="left-align flow-text">@Html.DisplayFor(model => model.LastName)</span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Email", new { @class = "right-align flow-text" }):
        <span class="left-align flow-text">@Html.DisplayFor(model => model.Email)</span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Birthdate, "Birth date", new { @class = "right-align flow-text" }):
        <span class="left-align flow-text">@Html.DisplayFor(model => model.Birthdate)</span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsSubcribedToNewsletter, "Subcribed to newsletter", new { @class = "right-align flow-text" }):
        <span class="left-align flow-text">@Html.DisplayFor(model => model.IsSubcribedToNewsletter)</span>
    </div>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <a asp-action="Index" class="btn btn-primary">Back</a>
            <input type="submit" value="Delete" class="btn btn-primary" /> 
        </div>
    </form>
</div>
