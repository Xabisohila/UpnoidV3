@model UpnoidV3.Models.Customer

@{
    ViewData["Title"] = "Create";
}

@section AddToHead {
    
    <link href="~/lib/datedropper/datedropper.css" rel="stylesheet" />  
}
<div class="panel panel-success">
    <div class="jumbotron panel-heading text-center">
        CREATE CUSTOMER
    </div>
    <div class="col-md-offset-3">
        <form asp-action="Create">
            <div class="form-horizontal">
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LastName" class="col-md-2 control-label">
                        <i class="fa fa-user fa-fw"></i>
                    </label>
                    <div class="col-md-10">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="col-md-2 control-label">
                        <i class="fa fa-user fa-fw"></i>
                    </label>
                    <div class="col-md-10">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label">
                        <i class="fa fa-envelope-o fa-fw"></i>
                    </label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Birthdate" class="col-md-2 control-label">
                        <i class="fa fa-calendar-o fa-fw"></i>
                    </label>
                    <div class="col-md-10">
                        <input asp-for="Birthdate" class="form-control" type="text" placeholder="Birth date" />
                        <span asp-validation-for="Birthdate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.IsSubcribedToNewsletter) Subscribed to Newsletter?
                            </label>
                        </div>
                    </div>
                </div>
                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-success col-md-offset-0">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
            <p>
                Upnoid™
            </p>
        </form>
        </div>
    </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
