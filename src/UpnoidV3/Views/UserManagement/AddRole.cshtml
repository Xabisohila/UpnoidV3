@model UpnoidV3.ViewModels.UserManagementAddRoleViewModel

<h4>Add Role For @Model.Email</h4>
<div asp-validation-summary="All"></div>
<form asp-controller="UserManagement" asp-action="AddRole">
    <input asp-for="UserId" type="hidden" class="form-control" />
    <select asp-for="NewRole" asp-items="Model.Roles"></select>
    <input type="submit"value="Add Role" class="btn btn-primary" />
</form>

